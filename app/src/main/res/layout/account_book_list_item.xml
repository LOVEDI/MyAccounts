<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/account_book_item_icon_iv"
        android:src="@drawable/baobao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/account_book_item_icon_iv"
            style="@style/ListViewItemStyle"
            android:id="@+id/account_book_item_name_tv"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/account_book_item_icon_iv"
            style="@style/ListViewItemStyle"
            android:layout_below="@+id/account_book_item_name_tv"
            android:id="@+id/account_book_item_money_tv"
            android:textColor="@color/text_gray_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:id="@+id/account_book_item_total_tv"
            android:textColor="@color/black"
            />

</RelativeLayout>