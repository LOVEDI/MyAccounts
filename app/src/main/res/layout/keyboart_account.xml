<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入账本信息"
            android:id="@+id/keyboard_account_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/accountButton"
            android:text="1"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_1"
            />
        <Button
            style="@style/accountButton"
            android:text="2"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_2"
            />
        <Button
            style="@style/accountButton"
            android:text="3"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_3"></Button>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        />
        <Button
            style="@style/accountButton"
            android:text="4"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_4"
            />
        <Button
            style="@style/accountButton"
            android:text="5"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_5"
            />
        <Button
            style="@style/accountButton"
            android:text="6"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_6"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/accountButton"
            android:text="7"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_7"
            />
        <Button
            style="@style/accountButton"
            android:text="8"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_8"
            />
        <Button
            style="@style/accountButton"
            android:text="9"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_9"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/accountButton"
            android:text="0"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_0"
            />
        <Button
            style="@style/accountButton"
            android:text="."
            android:layout_weight="1"
            android:id="@+id/keyboard_account_dian"
            />
        <Button
            style="@style/accountButton"
            android:hint="清除"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_del"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/accountButton"
            android:hint="重置"
            android:layout_weight="1"
            android:id="@+id/keyboard_account_result"
            />
        <Button
            style="@style/accountButton"
            android:hint="确定"
            android:layout_weight="2"
            android:id="@+id/keyboard_account_save"
            />
    </LinearLayout>



</LinearLayout>